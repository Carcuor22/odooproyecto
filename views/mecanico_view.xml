<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Vista Formulario para Mecánicos -->
  <record id="view_mecanico_form" model="ir.ui.view">
    <field name="name">odooproyecto.mecanico.form</field>
    <field name="model">odooproyecto.mecanico</field>
    <field name="arch" type="xml">
      <form string="Mecánico">
        <sheet>
          <!-- Grupo de campos heredados (del modelo Persona, a través del _inherits) -->
          <group string="Datos de Persona">
            <field name="persona_id"/>
            <field name="persona_id.nombre"/>
            <field name="persona_id.correo"/>
            <field name="persona_id.direccion"/>
            <field name="persona_id.telefono"/>
          </group>
          <!-- Grupo de campos propios del Mecánico -->
          <group string="Datos de Mecánico">
            <field name="especializacion"/>
            <field name="salario"/>
            <field name="foto"/>
            <field name="fecha_contratacion"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Vista Árbol (Tree) para Mecánicos -->
  <record id="view_mecanico_tree" model="ir.ui.view">
    <field name="name">odooproyecto.mecanico.tree</field>
    <field name="model">odooproyecto.mecanico</field>
    <field name="arch" type="xml">
      <tree string="Mecánicos">
        <field name="persona_id.nombre"/>
        <field name="especializacion"/>
        <field name="persona_id.telefono"/>
        <field name="salario"/>
      </tree>
    </field>
  </record>

  <!-- Acción para abrir la vista de Mecánicos -->
  <record id="action_mecanico" model="ir.actions.act_window">
    <field name="name">Mecánicos</field>
    <field name="res_model">odooproyecto.mecanico</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">Cree un nuevo mecánico.</p>
    </field>
  </record>

  <!-- Menú para Mecánicos -->
  <menuitem id="menu_mecanicos" 
            name="Mecánicos" 
            parent="menu_personas" 
            action="action_mecanico" 
            sequence="10"/>
</odoo>