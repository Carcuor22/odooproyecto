<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mecanico_form" model="ir.ui.view">
        <field name="name">odooproyecto.mecanico.form</field>
        <field name="model">odooproyecto.mecanico</field>
        <field name="arch" type="xml">
            <form string="Mecánico">
                <sheet>
                    <group>
                        <field name="nif"/>
                        <field name="nombre"/>  <!-- Campo heredado de Persona -->
                        <field name="correo"/>  <!-- Campo heredado de Persona -->
                        <field name="direccion"/>  <!-- Campo heredado de Persona -->
                        <field name="telefono"/>  <!-- Campo heredado de Persona -->
                        <field name="especializacion"/>  <!-- Propio de Mecanico -->
                        <field name="salario"/>  <!-- Propio de Mecanico -->
                        <field name="foto"/>  <!-- Propio de Mecanico -->
                        <field name="fecha_contratacion"/>  <!-- Propio de Mecanico -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mecanico_tree" model="ir.ui.view">
        <field name="name">odooproyecto.mecanico.tree</field>
        <field name="model">odooproyecto.mecanico</field>
        <field name="arch" type="xml">
            <tree string="Mecánicos">
                <field name="nif"/>
                <field name="nombre"/>  <!-- Campo heredado de Persona -->
                <field name="especializacion"/>  <!-- Propio de Mecanico -->
                <field name="telefono"/>  <!-- Campo heredado de Persona -->
                <field name="salario"/>  <!-- Propio de Mecanico -->
            </tree>
        </field>
    </record>
</odoo>
