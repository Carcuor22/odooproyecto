<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cliente_form" model="ir.ui.view">
        <field name="name">odooproyecto.cliente.form</field>
        <field name="model">odooproyecto.cliente</field>
        <field name="arch" type="xml">
            <form string="Cliente">
                <sheet>
                    <group>
                        <field name="nif"/>
                        <field name="nombre"/>  <!-- Campo heredado de Persona -->
                        <field name="correo"/>  <!-- Campo heredado de Persona -->
                        <field name="direccion"/>  <!-- Campo heredado de Persona -->
                        <field name="telefono"/>  <!-- Campo heredado de Persona -->
                        <field name="tipo"/>  <!-- Propio de Cliente -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_cliente_tree" model="ir.ui.view">
        <field name="name">odooproyecto.cliente.tree</field>
        <field name="model">odooproyecto.cliente</field>
        <field name="arch" type="xml">
            <tree string="Clientes">
                <field name="nif"/>
                <field name="nombre"/>  <!-- Campo heredado de Persona -->
                <field name="tipo"/>  <!-- Propio de Cliente -->
                <field name="correo"/>  <!-- Campo heredado de Persona -->
                <field name="telefono"/>  <!-- Campo heredado de Persona -->
            </tree>
        </field>
    </record>
</odoo>
