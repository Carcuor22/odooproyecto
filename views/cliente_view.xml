<odoo>
    <record id="view_cliente_tree" model="ir.ui.view">
        <field name="name">cliente.tree</field>
        <field name="model">taller.cliente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nif"/>
                <field name="nombre"/>
                <field name="tipo"/>
            </tree>
        </field>
    </record>

    <record id="view_cliente_form" model="ir.ui.view">
        <field name="name">cliente.form</field>
        <field name="model">taller.cliente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="persona_id" invisible="1"/>
                        <field name="nif"/>
                        <field name="nombre"/>
                        <field name="tipo"/>
                        <field name="correo"/>
                        <field name="direccion"/>
                        <field name="telefono"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>